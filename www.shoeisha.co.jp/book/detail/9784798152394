        if (t >= 1000*60*30) {
          cX.stopAllSessionAnnotations();
          var da = Math.floor(t/(1000*60*60*24));
          if(da < 1) {
            cp["elapsed"] = sa["elapsed_S"] = "\u0031\u65E5\u4EE5\u5185";
