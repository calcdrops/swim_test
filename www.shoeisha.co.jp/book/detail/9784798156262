<script>
$(function() {
  var ZOOM_ENABLE_SIZE = 900;

  var sImageModal = {
    zoom: function(e) {
      var zoomer = document.getElementById('splus-ga-image-zoom');
      e.offsetX ? offsetX = e.offsetX : offsetX = e.touches[0].pageX
      e.offsetY ? offsetY = e.offsetY : offsetX = e.touches[0].pageX
      x = offsetX / zoomer.offsetWidth * 100
      y = offsetY / zoomer.offsetHeight * 100
      zoomer.style.backgroundPosition = x + '% ' + y + '%';
    },
    zoomIn: function(e) {
      var zoomImage = $('#splus-ga-image-zoom');
      zoomImage.removeClass('zoomedout');
      zoomImage.addClass('zoomedin');
      zoomImage.css({'background-image': 'url(' + e.target.src + ')'});
      $('.splus-ga-main-image-block figure.zoomedin img').css({'opacity': 0}).fadeIn(200);
    },
    zoomOut: function(e) {
      var zoomImage = $('#splus-ga-image-zoom');
      zoomImage.removeClass('zoomedin');
      zoomImage.addClass('zoomedout');
      zoomImage.css({'background-image': ''});
      $('.splus-ga-main-image-block figure.zoomedout img').css({'opacity': 10}).fadeIn(200);
    },
    initImage: function(src) {
      $('#splus-ga-main-image').attr('src', src);
      $('#splus-ga-image-zoom').css({'background-image': ''});
    },
    updateZoomAbleClass: function(width) {
      if (width >= ZOOM_ENABLE_SIZE) {
        $('#splus-ga-main-image').addClass('zoomable');
      } else {
        $('#splus-ga-main-image').removeClass('zoomable');
      }
    }
  };

  $(document).on('click', '.zoomedout .zoomable', sImageModal.zoomIn);
  $(document).on('click', '.zoomedin .zoomable', sImageModal.zoomOut);
  $(document).on('mousemove', '.zoomedin', sImageModal.zoom);

  $('.splus-ga-thumbnail').on('click', function(e) {
    $('.splus-ga-thumbnail.selected').removeClass('selected');
    sImageModal.initImage(e.target.dataset.zoomSrc);
    var zoomImage = $('#splus-ga-image-zoom');
    if (zoomImage.hasClass('zoomedin')) {
      sImageModal.zoomOut();
    }

    zoomImage.removeClass('zoomedin');
    zoomImage.addClass('zoomedout');

    sImageModal.updateZoomAbleClass(e.target.dataset.width)
    $(this).addClass('selected');
  });

  $('#splus-ga-modal').on('show.bs.modal', function(e) {
    var firstThumbnail = $('.splus-ga-thumbnail:first');
    var dataSrc = firstThumbnail.data('zoom-src');
    sImageModal.initImage(dataSrc);

    var dataWidth = firstThumbnail.data('width');
    sImageModal.updateZoomAbleClass(dataWidth);
    firstThumbnail.addClass('selected');

    $('.ga-lazyload').each(function() {
      var img = $(this);
      img.attr('src', img.data('src'));
    });
  });
});
</script>
<style>
@media (min-width: 992px) {
  .modal-lg {
    width: 80% !important;
  }
  .modal-body {
    height: 628px;
  }
  .modal-row, .splus-ga-main-image-block {
    height: 100%;
  }
  #splus-ga-image-zoom {
    height: 100%;
  }
  .splus-ga-main-image-block {
    text-align: center;
  }
}
</style>  
